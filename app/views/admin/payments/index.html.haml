%section.admin_payments
  .container
    .row
      .col-sm-10.col-sm-offset-1
        %section.payment_history
          %ul.nav.nav-tabs
            %li.active
              %a(href="") Recent Payments
            %li
              =link_to "Add a New Video", new_admin_video_path
          %table.table
            %thead
              %tr
                %th Name
                %th Email
                %th Amount
                %th Reference ID
            %tbody
              - @payments.each do |p|
                %tr
                  %td= p.user_full_name
                  %td= p.user_email
                  %td= p.amount_to_decimal
                  %td= p.reference_id
